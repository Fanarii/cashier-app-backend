// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  order Order[]
}

model Order {
  id           Int    @id @default(autoincrement())
  customerName String
  customer     User   @relation(fields: [customerId], references: [id])
  customerId   Int
  menu         Menu[]
}

model Menu {
  id       Int     @id @default(autoincrement())
  name     String
  price    Int
  category String
  quantity Int     @default(1)
  file     String
  url      String
  stock    Int @default(0)
  order    Order[]
}
